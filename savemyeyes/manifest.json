{
  "manifest_version": 2,
  "name": "SaveMyEyes",
  "version": "1.0",

  "description": "Hides bad stuff",

  "icons": {
    "48": "icons/positive-panda.png"
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/positive-panda.png",
      "32": "icons/positive-panda.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://news.google.com/*"],
      "js": ["savemyeyes.js"]
    }
  ],

  "permissions": [
    "storage"
  ]

}
